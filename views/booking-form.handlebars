
<div style="position:absolute;top:20%">
    <img src="https://cdn4.iconfinder.com/data/icons/map-pins-2/256/26-128.png" style="width: 300%;">
</div>
<div class="container">
    <h1 class="text-center">Book Your CAB</h1>
    {{!-- <h2 class="text-left" style="font-family: Gabriola;">CAB : {{cab.dataValues.id}}</h2> --}}
    <div>
        <form method="post" style="padding:20px ;width:80%;position:absolute;right:-15%">

            <div class="col">
                    <input type="hidden" name="CabId" id="cabnumber" value="{{cab.dataValues.id}}" class="form-control"
                        style="border-color:rgb(44, 156, 204) ;width:60%;">
                </div>
<div class="row">

                <div class="col">
                    <label for="cabnumber">CAB</label>
                    <input type="text" name="cabnumber" id="cabnumber" readonly value="{{cab.dataValues.cabnumber}}" class="form-control"
                        style="border-color:rgb(44, 156, 204) ;width:29%;">
                </div>
            <div class="row">
                <div class="col">
                    <label for="start">Source</label>
                    <select class="form-select" name="start" style="border-color:rgb(44, 156, 204) ;width:60%;">
                        <option></option>
                        {{#each data}}
                        <option value="{{this.dataValues.start}}">{{this.dataValues.start}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col"><label for="end">Destination</label>
                    <select class="form-select" name="end" style="border-color:rgb(44, 156, 204) ;width:60%;">
                        <option></option>
                        {{#each data}}
                        <option value="{{this.dataValues.end}}">{{this.dataValues.end}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" class="form-control"
                        style="border-color:rgb(44, 156, 204) ;width:60%;">
                </div>
                <div class="col">
                    <label for="time">Pickup Time</label>
                    <input type="time" name="time" id="time" class="form-control"
                        style="border-color:rgb(44, 156, 204) ;width:60%;">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="paddress">PickUp Address</label>
                    <textarea name="paddress" id="paddress" class="form-control"
                        style="height: 10vh;border-radius:12px;border-color:rgb(22, 73, 112);width:60%;">
                    </textarea>
                </div>
                <div class="col">
                    <label for="daddress">DropOff Address</label>
                    <textarea name="daddress" id="daddress" class="form-control"
                        style="height: 10vh;border-radius:12px;border-color:rgb(22, 73, 112);width:60%;">
                    </textarea>
                </div>
            </div>

            <br>
            <div>
                <h5>Traveller Details</h5>
            </div>
            <div class="row">
                <div class="col">
                    <label for="name">Name</label>
                    <input type="text" name="pname" id="name" value="{{user.dataValues.name}}" class="form-control"
                        style="border-color:rgb(44, 156, 204);width:60%;">
                </div>
                <div class="col">
                    <label for="mobile">Conatct Number</label>
                    <input type="number" name="contactnumber" id="contactnumber" value="{{user.dataValues.mobile}}" class="form-control"
                        style="border-color:rgb(44, 156, 204);width:60%;">
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <label for="passengersno">Number of passengers</label>
                <input type="number" name="passengersno" id="passengersno" class="form-control"
                    style="border-color:rgb(44, 156, 204);width:60%;"></div>
                    <div class="col">
<br><input type="submit" value="Book Now" class="btn"
                style="background-color: rgba(24, 79, 111, 0.837);width:60%;">
                    </div>
                </div>
               
           
        </form>
    </div>
</div>
</div>